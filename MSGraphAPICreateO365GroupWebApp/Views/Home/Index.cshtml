@using Microsoft.Graph.Models;
@{
    ViewData["Title"] = "Home Page";
    //Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="col-md-12 col-sm-12 col-xs-12">
    <div class="">
        <div class="page-title">
            <div class="title_left">
                <h3>Manage group O365</h3>
            </div>
        </div>
        <div class="clearfix"></div>
        <div class="col-md-12 col-sm-12 col-xs-12">
            <div class="x_panel">
                <div class="x_title">
                    <h2>
                        @Html.ActionLink("Create O365 group", "CreateO365Group")
                    </h2>
                    <div class="clearfix"></div>
                </div>
                <div class="x_content">
                    @{
                        List<Group>? listGroup = ViewData["GraphApiResult"] as List<Group>;
                        if (listGroup != null)
                        {
                            if (ViewData["GroupCount"] == null)
                            {
                                <h1>No group currently.</h1>
                            }
                            else
                            {
                                <table class="table table-striped table-bordered" width="100%">
                                    <thead>
                                        <tr>
                                            <th>#</th>
                                            <th>Name</th>
                                            <th>Mail</th>
                                            <th>Type group</th>
                                            <th>Create date</th>
                                            <th width="5%"></th>
                                            <th width="5%"></th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        @{
                                            int i = 0;
                                            foreach (var group in listGroup)
                                            {
                                                if (group != null)
                                                {
                                                    <tr>
                                                        <th scope="row">@(++i)</th>
                                                        <td>
                                                            @{
                                                                string displayName = group.DisplayName;
                                                            }
                                                            @Html.ActionLink(displayName, "GroupDetail", new { id = group.Id })
                                                        </td>
                                                        <td>
                                                            @group.Mail
                                                        </td>
                                                        <td>
                                                            @foreach (var type in group.GroupTypes)
                                                            {
                                                                <p>@type </p>
                                                            }
                                                        </td>
                                                        <td>
                                                            @group.CreatedDateTime
                                                        </td>
                                                        <td>@Html.ActionLink("Edit", "EditO365Group", new { id = group.Id })</td>
                                                        <td>@Html.ActionLink("Delete", "DeleteO365Group", new { id = group.Id })</td>
                                                    </tr>
                                                }
                                            }
                                        }
                                    </tbody>
                                </table>
                            }
                        }
                        
                    }

                </div>
            </div>
        </div>
    </div>
</div>
<div class="clearfix"></div>
