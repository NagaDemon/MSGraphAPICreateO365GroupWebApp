@model Microsoft.Graph.Models.Group
@{
    ViewData["Title"] = "DeleteO365Group";
}

<div class="col-md-12 col-sm-12 col-xs-12">
    <div class="">
        <div class="page-title">
            <div class="title_left">
                <h3>Delete O365 group</h3>
            </div>
        </div>
        <div class="clearfix"></div>
        <div class="col-md-12 col-sm-12 col-xs-12">
            <div class="x_panel">
                <div class="x_title">
                    <h2>Group Info</h2>
                    <div class="clearfix"></div>
                </div>
                <div class="x_content">
                    <form class="form-horizontal form-label-left" action="/Home/DeleteO365Group" method="post" name="deleteO365Group" id="deleteO365Group">
                        <div class="form-group">
                            <label class="control-label col-md-3 col-sm-3 col-xs-12">Display Name</label>
                            <div class="col-md-6 col-sm-6 col-xs-12">
                                <input type="text" value="@Model.DisplayName" class="form-control col-md-10" disabled />
                                <input type="hidden" name="displayname" id="displayname" value="@Model.DisplayName" />
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="control-label col-md-3 col-sm-3 col-xs-12">Mail</label>
                            <div class="col-md-6 col-sm-6 col-xs-12">
                                <input type="text" value="@Model.Mail" class="form-control col-md-10" disabled />
                                <input type="hidden" name="mail" id="mail" value="@Model.Mail" />
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="control-label col-md-3 col-sm-3 col-xs-12">Group type</label>
                            <div class="col-md-6 col-sm-6 col-xs-12">
                                <input type="text" name="type" id="type" value="@String.Join(", ", Model.GroupTypes.ToArray())" class="form-control col-md-10" disabled />
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="control-label col-md-3 col-sm-3 col-xs-12">Description</label>
                            <div class="col-md-6 col-sm-6 col-xs-12">
                                <input type="text" name="description" id="description" value="@Model.Description" class="form-control col-md-10" disabled />
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="control-label col-md-3 col-sm-3 col-xs-12">Reason</label>
                            <div class="col-md-6 col-sm-6 col-xs-12">
                                <input type="text" name="reason" id="reason" class="form-control col-md-10" multiple />
                            </div>
                        </div>
                        <div class="ln_solid"></div>
                        <div class="form-group">
                            <div class="col-md-6 col-sm-6 col-xs-12 col-md-offset-3">
                                <input type="hidden" id="id" name="id" value="@Model.Id">
                                <button type="button" class="btn btn-primary" onclick="window.history.go(-1); return false;">Back</button>
                                <button type="submit" class="btn btn-success">Delete</button>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
<div class="clearfix"></div>

