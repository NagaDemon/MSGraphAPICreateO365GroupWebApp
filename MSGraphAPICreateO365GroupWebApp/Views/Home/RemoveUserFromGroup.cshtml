@model MSGraphAPICreateO365GroupWebApp.Models.O365UserGroup
@{
    ViewData["Title"] = "RemoveUserFromGroup";
}

<form class="form-horizontal form-label-left" action="/Home/RemoveUserFromGroup" method="post" name="RemoveUserFromGroup" id="RemoveUserFromGroup">
    <div class="col-md-12 col-sm-12 col-xs-12">
        <div class="">
            <div class="page-title">
                <div class="title_left">
                    <h3>Remove User in Group</h3>
                </div>
            </div>
            <div class="clearfix"></div>
            <div class="col-md-12 col-sm-12 col-xs-12">
                <div class="x_panel">
                    <div class="x_title">
                        <h2>User Info</h2>
                        <div class="clearfix"></div>
                    </div>
                    <div class="x_content">

                        <div class="form-group">
                            <label class="control-label col-md-3 col-sm-3 col-xs-12">Group</label>
                            <div class="col-md-6 col-sm-6 col-xs-12">
                                <input type="text" name="groupdisplayname" id="groupdisplayname" value="@Model.GroupDisplayName" class="form-control col-md-10" disabled />
                            </div>
                        </div>


                        <div class="form-group">
                            <label class="control-label col-md-3 col-sm-3 col-xs-12">User</label>
                            <div class="col-md-6 col-sm-6 col-xs-12">
                                <input type="text" name="userdisplayname" id="userdisplayname" value="@Model.UserDisplayName" class="form-control col-md-10" disabled />
                            </div>
                        </div>

                        <div class="form-group">
                            <label class="control-label col-md-3 col-sm-3 col-xs-12">Confirm</label>
                            <div class="col-md-6 col-sm-6 col-xs-12">
                                <input type="text" name="confirm" id="confirm" class="form-control col-md-10" placeholder="type:Confirm" required />
                            </div>
                        </div>
                    </div>
                    <div class="ln_solid"></div>

                    <div class="form-group">
                        <div class="col-md-6 col-sm-6 col-xs-12 col-md-offset-3">
                            <input type="hidden" id="groupid" name="groupid" value="@Model.GroupId" />
                            <input type="hidden" id="userid" name="userid" value="@Model.UserId" />
                            <button type="button" class="btn btn-primary" onclick="window.history.go(-1); return false;">Back</button>
                            <button type="submit" class="btn btn-success">Remove User</button>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="clearfix"></div>
</form>

