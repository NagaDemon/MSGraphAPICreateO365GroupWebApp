
@{
    ViewData["Title"] = "CreateO365Group";
}

<div class="col-md-12 col-sm-12 col-xs-12">
    <div class="">
        <div class="page-title">
            <div class="title_left">
                <h3>Create O365 group</h3>
            </div>
        </div>
        <div class="clearfix"></div>
        <div class="col-md-12 col-sm-12 col-xs-12">
            <div class="x_panel">
                <div class="x_title">
                    <div class="clearfix"></div>
                </div>
                <div class="x_content">
                    <form class="form-horizontal form-label-left" asp-controller="Home" asp-action="CreateO365Group" method="post" name="CreateO365Group" id="CreateO365Group">
                        <div class="form-group">
                            <label class="control-label col-md-3 col-sm-3 col-xs-12">Group Name:</label>
                            <div class="col-md-6 col-sm-6 col-xs-12">
                                <input type="text" name="groupName" id="groupName" class="form-control col-md-10" required />
                            </div>
                        </div>
                        <br>
                        <div class="form-group">
                            <label class="control-label col-md-3 col-sm-3 col-xs-12">Group Description:</label>
                            <div class="col-md-6 col-sm-6 col-xs-12">
                                <input type="text" name="description" id="description" class="form-control col-md-10" required />
                            </div>
                        </div>
                        <br>
                        <div class="form-group">
                            <label class="control-label">Resource Behavior Options:</label>
                            <br>
                            <div class="form-check">
                              <input class="form-check-input" type="checkbox" name="resourceBehaviorOptions" value="AllowOnlyMembersToPost" id="AllowOnlyMembersToPostCheck" />
                              <label class="form-check-label" for="AllowOnlyMembersToPostCheck">AllowOnlyMembersToPost</label>
                            </div>
                            <br>
                            <div class="form-check">
                              <input class="form-check-input" type="checkbox" name="resourceBehaviorOptions" value="CalendarMemberReadOnly" id="CalendarMemberReadOnlyCheck" />
                              <label class="form-check-label" for="CalendarMemberReadOnlyCheck">CalendarMemberReadOnly</label>
                            </div>
                            <br>
                            <div class="form-check">
                              <input class="form-check-input" type="checkbox" name="resourceBehaviorOptions" value="ConnectorsDisabled" id="ConnectorsDisabledCheck" />
                              <label class="form-check-label" for="ConnectorsDisabledCheck">ConnectorsDisabled</label>
                            </div>
                            <br>
                            <div class="form-check">
                              <input class="form-check-input" type="checkbox" name="resourceBehaviorOptions" value="HideGroupInOutlook" id="HideGroupInOutlookCheck" />
                              <label class="form-check-label" for="HideGroupInOutlookCheck">HideGroupInOutlook</label>
                            </div>
                            <br>
                            <div class="form-check">
                                <input class="form-check-input" type="checkbox" name="resourceBehaviorOptions" value="SubscribeMembersToCalendarEventsDisabled" id="SubscribeMembersToCalendarEventsDisabledCheck" />
                                <label class="form-check-label" for="SubscribeMembersToCalendarEventsDisabledCheck">SubscribeMembersToCalendarEventsDisabled</label>
                            </div>
                            <br>
                            <div class="form-check">
                                <input class="form-check-input" type="checkbox" name="resourceBehaviorOptions" value="SubscribeNewGroupMembers" id="SubscribeNewGroupMembersCheck" />
                                <label class="form-check-label" for="SubscribeNewGroupMembersCheck">SubscribeNewGroupMembers</label>
                            </div>
                            <br>
                            <div class="form-check">
                                <input class="form-check-input" type="checkbox" name="resourceBehaviorOptions" value="WelcomeEmailDisabled" id="WelcomeEmailDisabledCheck" />
                                <label class="form-check-label" for="WelcomeEmailDisabledCheck">WelcomeEmailDisabled</label>
                            </div>
                        </div>
                        <div class="ln_solid"></div>
                        <div class="form-group">
                            <div class="col-md-6 col-sm-6 col-xs-12 col-md-offset-3">
                                <button type="button" class="btn btn-primary" onclick="window.history.go(-1); return false;">Back</button>
                                <button type="submit" class="btn btn-success">Create</button>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
<div class="clearfix"></div>

